{
	"manifest_version": 2,

	"name": "Twitch Chat Scrubber",
	"description": "This extension helps filter Twitch chat messages",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Twitch Chat Scrubber"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*.twitch.tv/*",
				"https://*.twitch.tv/*"
			],
			"css": ["style.css"],
			"js": [
				"jquery-2.1.3.js",
				"copyPasta.js",
				"delete.js",
				"deletionFilters.js",
				"modify.js",
				"mutators.js",
				"utils.js",
				"globals.js",
				"app.js",
				"react.js"
			],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"activeTab",
		"storage",
		"http://*.twitch.tv/*",
		"https://*.twitch.tv/*"
	]
}